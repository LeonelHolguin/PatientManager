@model List<PatientManager.Core.Application.ViewModels.LaboratoryTest.LaboratoryTestViewModel>;
@{
    ViewData["Title"] = "Laboratory Test";

}

<h1>Mantenimiento Pruebas de Laboratorio</h1>

<div class="container-fluid">

    <div class="row mb-4">
        <div class="col-3 offset-9">
            <a asp-controller="LaboratoryTest" asp-action="Create" class="btn btn-success">Nueva prueba</a>
        </div>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2>
                No hay nada para mostrar
            </h2>
        }
        else
        {
            <table class="table align-middle mb-0 bg-white">
                <thead class="bg-light">
                    <tr>
                        <th>Nombre</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <p class="fw-normal mb-1">@item.Name</p>
                            </td>
                            <td class="text-center">
                                <a asp-controller="LaboratoryTest" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm btn-rounded">
                                    Editar
                                </a>

                                <a asp-controller="LaboratoryTest" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-rounded">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        }


    </div>

</div>
