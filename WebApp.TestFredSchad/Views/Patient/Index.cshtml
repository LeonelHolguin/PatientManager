@model List<PatientManager.Core.Application.ViewModels.Patients.PatientViewModel>;
@{
    ViewData["Title"] = "Patient";

}

<h1>Mantenimiento Pacientes</h1>

<div class="container-fluid">

    <div class="row mb-4">
        <div class="col-3 offset-9">
            <a asp-controller="Patient" asp-action="Create" class="btn btn-success">Nuevo Paciente</a>
        </div>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2>
                No hay nada para mostrar
            </h2>
        }
        else
        {
    <table class="table align-middle mb-0 bg-white ">
        <thead class="bg-light">
            <tr>
                <th class="fw-bold" scope="col">Nombre</th>
                <th class="fw-bold">Cédula</th>
                <th class="fw-bold">Dirección</th>
                <th class="fw-bold">Telefono</th>
                <th class="fw-bold">F. nacimiento</th>
                <th class="fw-bold text-center">Condiciones</th>
                <th class="text-center fw-bold">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="@item.Photo"
                                 alt="Patient's Photo'"
                                 style="width: 65px; height: 65px; object-fit:cover;"
                                 class="rounded-circle" />

                            <div class="ms-3">
                                <p class="fw-normal mb-1">@($"{item.Name} {item.LastName}")</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal mb-0">@item.IdentityCard</p>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@item.Address</p>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@item.Phone</p>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@item.BirthDate</p>
                    </td>
                    <td class="text-center">
                        @if(item.IsSmoker)
                        {
                        <p class="badge badge-danger fw-normal mb-1">Fumador</p>
                        }
                        @if(item.HasAllergy)
                        {
                        <p class="badge badge-warning fw-normal mb-0">Alergico</p>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-controller="Patient" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm btn-rounded">
                            Editar
                        </a>

                        <a asp-controller="Patient" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-rounded">
                            Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

        }


    </div>

</div>
