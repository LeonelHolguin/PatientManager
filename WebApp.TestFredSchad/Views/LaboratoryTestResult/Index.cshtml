@model List<PatientManager.Core.Application.ViewModels.LaboratoryTestResults.LaboratoryTestResultViewModel>;
@{
    ViewData["Title"] = "Test Results";

}

<h1>Mantenimiento resultados de laboratorio</h1>

<section class="d-flex justify-content-between mt-5">
    <div class="mb-5 w-75">
        <form method="post" asp-controller="LaboratoryTestResult" asp-action="Index">
            <div class="input-group">
                <div class="form-outline">
                    <input type="search" id="form1" name="IdentityCardPatient" class="form-control">
                    <label class="form-label" for="form1" style="margin-left: 0px;">Buscar</label>
                    <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 47.2px;"></div><div class="form-notch-trailing"></div></div>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
</section>

<div class="container-fluid">
    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2>
                No hay nada para mostrar
            </h2>
        }
        else
        {
    <table class="table align-middle mb-0 bg-white mt-3">
        <thead class="bg-light">
            <tr>
                <th>Nombre paciente</th>
                <th>Cédula</th>
                <th>Prueba</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <p class="fw-bold mb-1">@($"{item.Patient.Name} {item.Patient.LastName}")</p>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@item.Patient.IdentityCard</p>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@item.LaboratoryTest.Name</p>
                    </td>
                    <td class="text-center">
                        <a asp-controller="LaboratoryTestResult" asp-action="SubmitResults" asp-route-id="@item.Id" class="btn btn-success btn-sm btn-rounded">
                            Reportar resultados
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

        }


    </div>

</div>
